@page
@model CompanyManagementApp.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Компании";
}

<h2 class="mb-4">Компании</h2>

<p>
    <a asp-page="Create" class="btn btn-outline-primary">Создать новую компанию</a>
</p>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Наименование</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Email</th>
                <th class="text-end">Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Companies)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td class="text-end">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Редактировать</a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>